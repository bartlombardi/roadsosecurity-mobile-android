<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnomalyActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:clickable="true"
        android:src="@mipmap/ic_warning_amber_48dp"
        app:backgroundTint="@color/colorBackground"
        android:rotation="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/footerLayout"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/about_description_color"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.46"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:padding="@dimen/about_icon_padding"
                    android:text="@string/speed"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:padding="@dimen/about_text_padding"
                    android:text="@string/distance"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.46"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:padding="@dimen/about_text_padding"
                    android:text="0 Km/h"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:padding="@dimen/about_text_padding"
                    android:text="0,00 Km"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.46"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:padding="@dimen/about_item_text_size"
                    android:text="@string/anomaly"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.46"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/anomaly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:padding="@dimen/about_item_text_size"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAnomalyDetected"
                    android:textSize="36sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>